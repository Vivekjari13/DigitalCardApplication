<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/splash"
        android:id="@+id/ContentRelative">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Profile11"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile2"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FullNameText"
            android:text=""
            android:layout_below="@id/Profile11"
            android:layout_marginHorizontal="200dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DesignationNameText"
            android:text=""
            android:layout_below="@id/FullNameText"
            android:layout_marginHorizontal="200dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CompanyNameText"
            android:text=""
            android:layout_below="@id/DesignationNameText"
            android:layout_marginHorizontal="200dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ContentLinear"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/ContentRelative"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"
            android:layout_marginEnd="20dp"
            android:id="@+id/PhoneCall"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message"
            android:id="@+id/Message1"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location"
            android:layout_marginStart="20dp"/>
    </LinearLayout>


</RelativeLayout>