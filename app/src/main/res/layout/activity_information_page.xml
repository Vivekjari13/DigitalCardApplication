<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationScreen">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Toolbar
            android:id="@+id/Tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#018786">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Digi Card"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_gravity="center"/>
        </Toolbar>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile2"
            android:layout_below="@id/Tool"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/PersonalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Info"
            android:layout_below="@id/Profile"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/Divider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PersonalInfo"
            android:background="@color/black"
            android:layout_marginHorizontal="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/Full_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            android:layout_below="@id/Divider1"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/FullName_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Designation"
            app:hintTextColor="@color/black"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_below="@id/Full_Name"
            android:layout_marginHorizontal="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/designation_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/Company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company"
            app:hintTextColor="@color/black"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_below="@id/designation"
            android:layout_marginHorizontal="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/company_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/About"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="About"
            app:hintTextColor="@color/black"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_below="@id/Company"
            android:layout_marginHorizontal="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/About_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:layout_marginTop="15dp"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/ContactInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Info"
            android:layout_below="@id/About"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/Divider2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContactInfo"
            android:background="@color/black"
            android:layout_marginHorizontal="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/ContactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            app:hintTextColor="@color/black"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_below="@id/Divider2"
            android:layout_marginHorizontal="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/companyNumber_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/WhatsAppNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is WhatsApp number"
            android:layout_below="@id/ContactNumber"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <RadioGroup
            android:id="@+id/RadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/WhatsAppNumber"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/YesWhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Yes"/>

            <RadioButton
                android:id="@+id/NoWhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="No"/>
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:hintTextColor="@color/black"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/black"
            android:layout_below="@id/RadioGroup"
            android:layout_marginHorizontal="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Eamil_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            app:hintTextColor="@color/black"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/black"
            android:layout_below="@id/Email"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Address_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/Service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Service"
            app:hintTextColor="@color/black"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_below="@id/Address"
            android:layout_marginHorizontal="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Service_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:layout_marginTop="15dp"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/AddService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add multiple services with, (Services1, Services2...)"
            android:layout_below="@id/Service"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AddService"
            android:text="Next"
            android:textColor="@color/white"
            android:id="@+id/NextButton"
            android:layout_centerInParent="true"
            android:background="@color/Button"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</ScrollView>